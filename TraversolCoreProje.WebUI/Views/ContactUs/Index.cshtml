@model ResultContactViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}
<section class="w3l-about-breadcrumb text-left">
    <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
        <div class="container py-2">
            <h2 class="title">Bize Ulaşın</h2>
            <ul class="breadcrumbs-custom-path mt-2">
                <li><a asp-action="Index" asp-controller="Default">Ana Sayfa</a></li>
                <li class="active"><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span> İletişim </li>
            </ul>
        </div>
    </div>
</section>
<section class="w3l-contact" id="contact">
    <div class="contact-infubd py-5">
        <div class="container py-lg-3">
            <div class="contact-grids row">
                <div class="col-lg-6 contact-left">
                    <div class="partners">
                        <div class="cont-details">
                            <h5>İletişim Bilgilerimiz</h5>
                            <p class="mt-3 mb-4">
                               @Model.Description
                            </p>
                        </div>
                        <div class="hours">
                            <h6 class="mt-4">Eposta:</h6>
                            <p>
                                <a href="@Model.Mail">
                                   @Model.Mail
                                </a>
                            </p>
                            <h6 class="mt-4">Ofisimize Gelin:</h6>
                            <p> @Model.Address</p>
                            <h6 class="mt-4">Telefon:</h6>
                            <p class="margin-top"><a href="tel:@Model.Phone">@Model.Phone</a></p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 mt-lg-0 mt-5 contact-right">
                    @await Html.PartialAsync("~/Views/ContactUs/AddContactUs.cshtml", new CreateContactUsViewModel()) 
                </div>

            </div>
            <div class="map mt-5 pt-md-5">
                <h5>Map</h5>
                <iframe src="@Model.MapLocation"
                        style="border:0" allowfullscreen=""></iframe>
            </div>
        </div>
    </div>
</section>

