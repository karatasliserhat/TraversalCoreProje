@model CreateContactUsViewModel
<form asp-controller="ContactUs" asp-action="Index" method="post" class="signin-form">
    <div class="input-grids">
        <div class="form-group">
            <input type="text" asp-for="@Model.Name" placeholder="Adınız*" class="contact-input" />
            <span class="text-danger" asp-validation-for="@Model.Name"></span>
        </div>
        <div class="form-group">
            <input type="email" asp-for="@Model.Mail" placeholder="Eposta Adresiniz" class="contact-input" />
            <span class="text-danger" asp-validation-for="@Model.Mail"></span>
        </div>
        <div class="form-group">
            <input type="text" asp-for="@Model.Subject" placeholder="Konu*" class="contact-input" />
            <span class="text-danger" asp-validation-for="@Model.Subject"></span>
        </div>
    </div>
    <div class="form-group">
        <textarea asp-for="@Model.MessageBody" placeholder="Mesajınızı Yazınız*" required=""></textarea>
        <span class="text-danger" asp-validation-for="@Model.MessageBody"></span>
    </div>
    <div class="text-right">
        <button class="btn btn-style btn-primary">Mesajı Gönder</button>
    </div>
</form>