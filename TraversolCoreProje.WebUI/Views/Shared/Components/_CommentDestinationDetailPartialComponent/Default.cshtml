@model List<ResultCommentViewModel>
<div class="comments mt-5">
    <h4 class="side-title ">Yorumlar (2)</h4>
    @if (Model is { Count: > 0 })
    {
        @foreach (var item in Model)
        {
            <div class="media mt-4">
                <div class="img-circle">
                    <img src="@item.ImageFile" class="img-fluid" alt="...">
                </div>
                <div class="media-body">

                    <ul class="time-rply mb-2">
                        <li>
                            <a href="#URL" class="name mt-0 mb-2 d-block">@item.FullName</a>
                            @item.Date.ToString("dd.MMM.yyyy")

                        </li>
                        <li class="reply-last">
                            <a href="#reply" class="reply">
                                Reply
                            </a>
                        </li>
                    </ul>
                    <p>
                        @item.Content
                    </p>
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-warning text-center">
            <p>Henüz Yorum Yapılmamış. </p>
        </div>
    }
</div>