@model List<ResultFeatureViewModel>
@{

}
<div class="best-rooms py-5">
    <div class="container py-md-5">
        <div class="ban-content-inf row">

            @if (Model is { Count: > 0 })
            {
                <div class="maghny-gd-1 col-lg-6">
                    <div class="maghny-grid">
                        <figure class="effect-lily border-radius  m-0">
                            <img class="img-fluid" src="@ViewBag.Images" alt="" />
                            <figcaption>
                                <div>
                                    <h4>@ViewBag.Title</h4>
                                    <p>@ViewBag.Description </p>
                                </div>
                            </figcaption>
                        </figure>
                    </div>
                </div>
                <div class="maghny-gd-1 col-lg-6 mt-lg-0 mt-4">
                    <div class="row">

                        @for (int i = 1; i < Model.Count; i++)
                        {
                            var mt4 = i <= 2 ? "" : "mt-4";



                            <div class="maghny-gd-1 col-6 @mt4">
                                <div class="maghny-grid">
                                    <figure class="effect-lily border-radius">
                                        <img class="img-fluid" src="@Model[i].Image" alt="" />
                                        <figcaption>
                                            <div>
                                                <h4>@Model[i].Title</h4>
                                                <p>@Model[i].Description </p>
                                            </div>
                                        </figcaption>
                                    </figure>
                                </div>
                            </div>




                        }
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-warning text-center">
                    <p>@ViewBag.Error</p>
                </div>
            }



        </div>
    </div>
</div>