@model List<ResultDestinationViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<section class="w3l-about-breadcrumb text-left">
    <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
        <div class="container">
            <h2 class="title">Rotalar </h2>
            <ul class="breadcrumbs-custom-path mt-2">
                <li><a asp-action="Index" asp-controller="Default">Ana Sayfa</a></li>
                <li class="active"><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span> Rotalar </li>
            </ul>
        </div>
    </div>
</section>
<section class="grids-1 py-5">
    <div class="grids py-lg-5 py-md-4">
        <div class="container">
            <h3 class="hny-title mb-5">Rotalar</h3>
            <div class="row">

                @if (Model is { Count: > 0 })
                {
                    foreach (var item in Model)
                    {
                        <div class="col-lg-4 col-md-4 col-6">
                            <div class="column">
                                <a asp-action="DestinationDetail" asp-controller="Destination" asp-route-dataId="@item.DataProtect"><img src="@item.Image" alt="" class="img-fluid"></a>
                                <div class="info">
                                    <h4><a asp-action="DestinationDetail" asp-controller="Destination" asp-route-dataId="@item.DataProtect">@item.City</a></h4>
                                    <p>@item.DayNight </p>
                                    <div class="dst-btm">
                                        <h6 class="">Başlayan Fiyatlarla </h6>
                                        <span>$@item.Price</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                    }
                }
                else
                {
                    <div class="alert alert-warning text-center">
                        <p>@ViewBag.Error</p>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

