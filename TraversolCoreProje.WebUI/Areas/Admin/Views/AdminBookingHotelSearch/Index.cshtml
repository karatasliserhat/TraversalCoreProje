@model ResultBookingHotelViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    int count = 0;
}

<div class="row">
    <div class="card">

        <h5 class="card-header">Api Booking Otel Rezervasyon Sayfası</h5>
        <h6 class="card-header">Arama Yapılan Ülke: Türkiye</h6>
        <div class="table-responsive text-nowrap">
            <table class="table my-2">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Otel Adı</th>
                        <th>Otel Puanı</th>
                        <th>Otel Değerlendirmesi</th>
                        <th>Detaylar</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">

                    @if (Model.data is { Length: > 0 })
                    {
                        @foreach (var item in Model.data)
                        {
                            count++;
                            <tr>
                                <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@count</strong></td>
                                <td>@item.city_name</td>
                                <td>@item.dest_id</td>
                                <td>@item.cc1</td>
                                <td><a href="^#" class="btn btn-outline-primary">Detaylar</a></td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5">Otel Bulunamadı...</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>
