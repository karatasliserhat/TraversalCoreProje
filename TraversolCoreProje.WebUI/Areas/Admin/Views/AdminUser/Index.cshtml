@model List<ResultUserViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{
    int count = 0;
}
<div class="row">
    <div class="card">

        <h5 class="card-header">Kullanıcılar</h5>
        <div class="table-responsive text-nowrap">
            <a class="btn btn-primary" asp-action="SignIn" asp-controller="Login"><i class="bx bx-add-to-queue me-1"></i> Yeni Kullanıcı</a>
            <table class="table my-2">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Ad Soyad</th>
                        <th>Kullanıcı Adı</th>
                        <th>Email</th>
                        <th>Yorumlar</th>
                        <th>Tur Geçmişi</th>
                        <th>Aksiyonlar</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">

                    @if (Model is { Count: > 0 })
                    {
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@count</strong></td>
                                <td>@item.Name @item.Surname</td>
                                <td>@item.UserName</td>
                                <td>@item.Email</td>
                                <td><a asp-action="CommentUserDetail" asp-controller="AdminUser" class="btn btn-info" asp-route-dataId="@item.DataProtect"><i class="bx bx-comment me-1"></i> Yorumlar</a></td>
                                <td><a asp-action="ReservationUser" asp-controller="AdminUser" class="btn btn-primary" asp-route-dataId="@item.DataProtect"><i class="bx bx-history me-1"></i> Tur Geçmişi</a></td>
                                <td>
                                    <a asp-action="Update" asp-controller="AdminUser" class="btn btn-warning" asp-route-dataId="@item.DataProtect"><i class="bx bx-edit me-1"></i> Güncelle</a>|
                                    <a asp-action="Delete" asp-controller="AdminUser" class="btn btn-danger" asp-route-dataId="@item.DataProtect"><i class="bx bx-trash me-1"></i> Sil</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7">Kullanıcı Bulunamadı...</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>