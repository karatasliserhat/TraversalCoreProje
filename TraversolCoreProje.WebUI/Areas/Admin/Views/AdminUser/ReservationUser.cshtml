@model List<ResultReservationViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{
    int count = 0;
}
<div class="row">
    <div class="card">

        <h5 class="card-header">Geçmiş Reservayon</h5>
        <div class="table-responsive text-nowrap">
            <table class="table my-2">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Misafir Ad Soyad</th>
                        <th>Rota</th>
                        <th>Kişi Sayısı</th>
                        <th>Tarih</th>
                        <th>Detay</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">

                    @if (Model is { Count: > 0 })
                    {
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@count</strong></td>
                                <td>@item.PersonNameSurname</td>
                                <td>@item.DestinationCityName</td>
                                <td>@item.PersonCount</td>
                                <td><a asp-action="ReservationUserDetail" asp-controller="AdminUser" class="btn btn-info" asp-route-dataId="@item.DataProtect"><i class="bx bx-comment me-1"></i> Detaylar</a></td>
                                
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7">Geçmiş Rezervasyon Bulunamadı...</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>