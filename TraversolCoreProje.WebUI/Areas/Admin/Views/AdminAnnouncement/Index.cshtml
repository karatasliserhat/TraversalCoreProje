@model List<ResultAnnouncementViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    int count = 0;
}

<div class="row">
    <div class="card">

        <h5 class="card-header">Bildirimler</h5>
        <div class="table-responsive text-nowrap">
            <a class="btn btn-primary" asp-action="CreateAnnouncement" asp-controller="AdminAnnouncement"><i class="bx bx-add-to-queue me-1"></i> Yeni Bildirim</a>
            <table class="table my-2">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Başlık</th>
                        <th>İçerik</th>
                        <th>Tarih</th>
                        <th>Aksiyonlar</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">

                    @if (Model is { Count: > 0 })
                    {
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@count</strong></td>
                                <td>@item.Title</td>
                                <td>@item.Content</td>
                                <td>@item.Date.ToShortDateString()</td>
                                <td>
                                    <a asp-action="Update" asp-controller="AdminAnnouncement" class="btn btn-warning" asp-route-dataId="@item.DataProtect"><i class="bx bx-edit me-1"></i> Güncelle</a>|<a asp-action="Delete" asp-controller="AdminAnnouncement" class="btn btn-danger" asp-route-dataId="@item.DataProtect"><i class="bx bx-trash me-1"></i> Sil</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr class="text-center">
                            <td colspan="6">Bildirim Bulunamadı...</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>
