@model List<ResultApiMovieViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{
    int count = 0;
}
<div class="row">
    <div class="card">

        <h5 class="card-header">Api IMDB Top 100 Film Listesi</h5>
        <div class="table-responsive text-nowrap">
            <table class="table my-2">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Film Adı</th>
                        <th>IMDB Puano</th>
                        <th>Yapım Yılı</th>
                        <th>Fragman</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">

                    @if (Model is { Count: > 0 })
                    {
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@count</strong></td>
                                <td>@item.title</td>
                                <td>@item.rating</td>
                                <td>@item.year</td>
                                <td>
                                    <a class="btn btn-outline-danger" href="#">Fragmanı Oynat</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5">Film Bulunamadı...</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>