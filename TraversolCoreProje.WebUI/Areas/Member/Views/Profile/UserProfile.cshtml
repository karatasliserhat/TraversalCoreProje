@model UserEditViewModel
@{
    ViewData["Title"] = "UserProfile";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header pb-0">
                    <h5>Profilim</h5>
                </div>
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <form method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="@Model.Id" />
                    <div class="form-control">
                        <label class="form-label">Adınız</label>
                        <input type="text" class="form-control" asp-for="@Model.Name" />
                        <span class="text-danger" asp-validation-for="@Model.Name"></span>
                    </div>
                    <div class="form-control">
                        <label class="form-label">Soyadınız</label>
                        <input type="text" class="form-control" asp-for="@Model.Surname" />
                        <span class="text-danger" asp-validation-for="@Model.Surname"></span>
                    </div>
                    <div class="form-control">
                        <label class="form-label">Kullanıcı Adınız</label>
                        <input type="text" class="form-control" asp-for="@Model.UserName" />
                        <span class="text-danger" asp-validation-for="@Model.UserName"></span>
                    </div>
                    <div class="form-control">
                        <label class="form-label">Eposta Adresiniz</label>
                        <input type="text" class="form-control" asp-for="@Model.Email" />
                        <span class="text-danger" asp-validation-for="@Model.Email"></span>
                    </div>
                    <div class="form-control">
                        <label class="form-label">Cinsiyetiniz</label>
                        <input type="text" class="form-control" asp-for="@Model.Gender" />
                        <span class="text-danger" asp-validation-for="@Model.Gender"></span>
                    </div>
                    <div class="form-control">
                        <label class="form-label">Profil Resim Seç</label>
                        <input type="file" class="form-control" asp-for="@Model.ImageFile" />
                        <span class="text-danger" asp-validation-for="@Model.ImageFile"></span>
                    </div>
                    <div class="form-control">
                        <label class="form-label">Şifre</label>
                        <input type="password" class="form-control" asp-for="@Model.Password" />
                        <span class="text-danger" asp-validation-for="@Model.Password"></span>
                    </div>
                    <div class="form-control">
                        <label class="form-label">Şifre Tekrar</label>
                        <input type="password" class="form-control" asp-for="@Model.ConfirmPassword" />
                        <span class="text-danger" asp-validation-for="@Model.ConfirmPassword"></span>
                    </div>
                    <input type="submit" class="btn btn-info" value="Profil Güncelle" />
                </form>
            </div>
        </div>
    </div>
</div>

